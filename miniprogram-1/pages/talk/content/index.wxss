/* pages/talk/content/index.wxss */

/* 发帖内容界面 */
.chat{
    padding-top: 20rpx;
    margin: 25rpx auto;
    width: 95%;
    border-radius: 15rpx;
    box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7);
    background-color: #fff;
}

/* 头像栏 */
.touxiang{
    height:80rpx;
    width: 80rpx;
    border-radius: 50%;
    overflow:hidden;
    /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */
}

.touxianglan{
    margin-top: 15rpx;
    margin-left: 5%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
    /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */
}

.name{
    padding-left: 23rpx;
    font-weight: 700;
    font-size: 34rpx;
    /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */
}

.major{
    font-size: 30rpx;
    /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */
    color: rgba(131, 131, 131, 0.9);
}

.tip{
    color: #000000;
    border: 1px solid #000000;
    margin-left: 200rpx;
}

/* 文本内容 */

.detailview{
    padding-left: 20rpx;
    width: 90%;
    margin:auto;
    padding-bottom: 20rpx;
    /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */
}

.detail_1{

  font-weight: 530;
  color: rgb(32, 27, 27);
  font-size: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  margin-top: 30rpx;
  /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */

}


.postimg{
    height: 600rpx;
    margin-top: 45rpx;
    margin-bottom: 15rpx;
    width: 100%;
    border-radius: 15rpx;
    box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.2);
   
}

.time{
  margin-top: 20rpx;
  font-weight: 530;
  color: rgba(131, 131, 131, 0.9);
  font-size: 30rpx;
  /* box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.7); */
  margin-bottom: 20rpx;
}


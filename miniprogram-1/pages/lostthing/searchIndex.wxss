    width: 46%;
    height: 100%;
    border-radius: 30rpx;
    margin-right: 3%;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.2);

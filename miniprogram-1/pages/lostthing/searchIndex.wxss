page {
    height: 100%;
    background-color: #eee;
}

/* 搜索框 */
.search {
    z-index: 9999999;
    height: 100%;
    width: 110%;
    border-radius: 50rpx;
    background-color: #eee;
    color: darkgray;
}

.search-hover {
    z-index: 9999999;
    height: 100%;
    width: 110%;
    border-radius: 50rpx;
    background-color: rgb(209, 209, 209);
}

/* 搜索框结束 */
/* 发布 */
.guide {
    z-index: 99999;
    position: fixed;
    top: 82%;
    right: 8%;
    margin: 3% 1%;
    height: 90rpx;
    width: 90rpx;
    border-radius: 45rpx;
    background-color: #fff;
    box-shadow: -1px 2px 12px 0px rgba(0, 0, 0, 0.2);
}

.guide .lostcenter {
    display: block;
    text-align: center;
    line-height: 90rpx;
    color: #aaa;
}

/* 切换栏 */

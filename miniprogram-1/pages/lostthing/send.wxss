.lostChoose {
    margin: 20rpx 5rpx;
    height: 40rpx;
}

picker {
    display: inline-block;
}

.moreInfor {
    position: relative;
    margin: 20rpx 5rpx;
    height: 50rpx;
}

.send {
    margin: 40rpx 0;
    height: 70rpx;
    border-radius: 70rpx;
    box-shadow: 0px 0px 8px #999 inset;
    line-height: 45rpx;
    text-align: center;
    background-color: steelblue;
    color: white
}

.send-hover {
    margin: 40rpx 0;
    height: 70rpx;
    border-radius: 70rpx;
    line-height: 45rpx;
    text-align: center;
    background-color: rgb(47, 101, 145);
    color: white;
    box-shadow: 0px 0px 0px rgb(253, 252, 252) inset;
}

.clearfix:after,
.clearfix:before {
    content: "";
    display: table;
}

.clearfix:after {
    clear: both;
}
/* 相机 */
.imgInSwiper{
    height: 400rpx;
    width: 100%;
}
.img_list .img_li .delete {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right:5rpx;
}

.img_list {
    width: 100vw;
    display: flex;
    display: -webkit-flex;
    padding: 0 20rpx;
    box-sizing: border-box;
    flex-wrap: wrap;
    -webkit-flex-wrap: wrap;
}

.img_list .img_li,

.addimg {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #999999;
    margin: 5rpx;
    flex-shrink: 0;
    -webkit-flex-shrink: 0;
}

.addimg image {
    width: 150rpx;
    height: 150rpx;
    margin: 25rpx 25rpx;
}

.img_list .img_li image {
    width: 100%;
    height: 100%;
}

.switchCheck {
    margin: 20rpx 5rpx;
    height: 60rpx;
}

.lostChoose {
    margin: 20rpx 5rpx;
    height: 40rpx;
}

picker {
    display: inline-block;
}

.moreInfor {
    position: relative;
    margin: 20rpx 5rpx;
    height: 50rpx;
}

.send {
    margin: 40rpx 0;
    height: 70rpx;
    border-radius: 70rpx;
    box-shadow: 0px 0px 8px #999 inset;
    line-height: 45rpx;
    text-align: center;
    background-color: steelblue;
    color: white
}

.send-hover {
    margin: 40rpx 0;
    height: 70rpx;
    border-radius: 70rpx;
    line-height: 45rpx;
    text-align: center;
    background-color: rgb(47, 101, 145);
    color: white;
    box-shadow: 0px 0px 0px rgb(253, 252, 252) inset;
}

.clearfix:after,
.clearfix:before {
    content: "";
    display: table;
}

.clearfix:after {
    clear: both;
}
/* 帖子数据 */
.box {
    width: 95;
    position: relative;
    margin: 10rpx 0;
    background-color: #fff;
    border-radius: 50rpx;
    box-shadow: -1px 2px 6px 0px rgba(0, 0, 0, 0.4)
}

.box1 {
    height: 100rpx;
    width: 500rpx;
}

.box1 image {
    float: left;
    margin: 5rpx 0 5rpx 10rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}

.box1 .text1 {
    float: left;
    margin-top: 10rpx;
    margin-left: 20rpx;
    font-weight: 700;
    font-size: 34rpx;
    width: 380rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-flow:row wrap;
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.box1 .text2 {
    float: left;
    margin-left: 20rpx;
    font-size: 20rpx;
    color: #aaa;
}

.box-way {
    position: absolute;
    right: 30rpx;
    top: 10rpx;
    color: rgb(224, 92, 40);
    font-size: 40rpx;
}

.box2 {
    margin: 20rpx 10rpx;
    padding-bottom: 50rpx;
     height: 400rpx; 
}

.box2 text {
    text-indent: 20rpx;
    height: 30%;
    width: 600rpx;
    margin: 0 auto;
    font-size: 28rpx;
    display: block;
    white-space: pre-line;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    flex-flow:row wrap;
}

.box2 image {
    margin: 20rpx 20rpx;
    width: 200rpx;
    height: 200rpx;
}


/* 帖子数据 */
.box {
    width: 98%;
    position: relative;
    margin: 10rpx auto;
    background-color: #fff;
    border-radius: 30rpx;
    box-shadow: -1px 2px 6px 0px rgba(0, 0, 0, 0.4);
    height:600rpx
}

.box1 {
    height: 100rpx;
    width: 500rpx;
}

.box1 image {
    float: left;
    margin: 5rpx 0 5rpx 10rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 90rpx;
}


.box1 .text1 {
    float: left;
    margin-top: 10rpx;
    margin-left: 20rpx;
    font-weight: 700;
    font-size: 34rpx;
    width: 380rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-flow:row wrap;
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.box1 .text2 {
    float: left;
    margin-left: 20rpx;
    font-size: 20rpx;
    color: #aaa;
}

.box-way {
    position: absolute;
    right: 30rpx;
    top: 10rpx;
    color: #e2a22a;
    font-size: 36rpx;
}

.box2 {
    margin: 20rpx auto;
    width: 80%;
    padding-top: 10rpx;
    padding-bottom: 50rpx;
    background-color: #f5f5f5;
    border-radius: 30rpx;
}

.box2 text {
    text-indent: 20rpx;
    height: 30%;
    width: 100%;
    margin: 0 auto;
    font-size: 28rpx;
    display: block;
    white-space: pre-line;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 7;
    flex-flow:row wrap;
}

.box2 image {
    margin: 20rpx 20rpx;
    width: 200rpx;
    height: 200rpx;
}

.box3{
    position: absolute;
    bottom: 0%;


    right: 0%;
}

.box3 .post-data {
    float: right;
}
.box3 .mypostmenu{
    
    font-size: 30rpx;
}
.box3  image {
    display: inline-block;
    position: absolute;
    right: 20%;
    width: 40rpx;
    height: 40rpx;
}
.box3  text {
    font-size: 30rpx;
    position: absolute;
    left: 82%;
}

